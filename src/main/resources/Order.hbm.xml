<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-5.3.5.dtd"> 

<hibernate-mapping>
    <class name = "com.ideas2it.ecommerce.model.Order" table = "PURCHASE_ORDER">
      
        <meta attribute = "class-description">
            This class contains the Order details. 
        </meta>
      
        <id name = "id" type = "int" column = "ID">
            <generator class="increment"/>
        </id>

        <property name = "quantity" column = "QUANTITY" type = "int"/>
        <property name = "price" column = "PRICE" type = "double"/> 
        <property name = "status" column = "STATUS" type = "boolean"/>
        <many-to-one name = "warehouseProduct" column = "WAREHOUSE_PRODUCT" 
            class = "com.ideas2it.ecommerce.model.WarehouseProduct"/>
        
        <many-to-one name = "customer" column = "CUSTOMER" 
            class = "com.ideas2it.ecommerce.model.Customer"/>
            
        <many-to-one name = "address" column = "ADDRESS" 
        	class = "com.ideas2it.ecommerce.model.Address"/>
    </class>
</hibernate-mapping>