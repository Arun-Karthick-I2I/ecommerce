<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd"> 

<hibernate-mapping>
    <class name = "com.ideas2it.ecommerce.model.Order" table = "PURCHASE_ORDER">
      
        <id name = "id" type = "int" column = "ID">
            <generator class="increment"/>
        </id>

        <property name = "quantity" column = "QUANTITY" type = "int"/>
        <property name = "price" column = "PRICE" type = "float"/> 
        <property name = "status" column = "STATUS" type = "string"/>
        <property name = "orderDate" column = "ORDER_DATE" type = "date" />
        
        <many-to-one name = "warehouseProduct" column = "WAREHOUSE_PRODUCT_ID" 
            class = "com.ideas2it.ecommerce.model.WarehouseProduct"/>
        
        <many-to-one name = "customer" column = "CUSTOMER_ID" 
            class = "com.ideas2it.ecommerce.model.Customer"/>
            
        <many-to-one name = "address" column = "ADDRESS_ID" 
        	class = "com.ideas2it.ecommerce.model.Address"/>
    </class>
</hibernate-mapping>
