<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 5.3//EN" "http://hibernate.sourceforge.net/hibernate-configuration-5.3.dtd">

<hibernate-configuration>

	<session-factory>
		<property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/ECOMMERCE</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root@dvd</property>
		<property name="show-sql">true</property>
		<property name="hbm2ddl.auto">update</property>
		<mapping resource="Address.hbm.xml" />
		<mapping resource="CartProduct.hbm.xml" />
		<mapping resource="Category.hbm.xml" />
		<mapping resource="Customer.hbm.xml" />
		<mapping resource="Order.hbm.xml" />
		<mapping resource="Product.hbm.xml" />
		<mapping resource="Seller.hbm.xml" />
		<mapping resource="User.hbm.xml" />
		<mapping resource="WarehouseProduct.hbm.xml" />
	</session-factory>

</hibernate-configuration>  